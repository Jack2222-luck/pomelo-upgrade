{
  "name": "pomelo-upgrade",
  "version": "3.2.1",
  "description": "网易Pomelo升级版本",
  "private": false,
  "homepage": "https://github.com/frank198/pomelo-upgrade#readme",
  "scripts": {
    "test": "grunt"
  },
  "bugs": {
    "url": "https://github.com/frank198/pomelo-upgrade/issues"
  },
  "repository": "https://github.com/frank198/pomelo-upgrade.git",
  "license": "MIT",
  "keywords": [
    "pomelo",
    "framework",
    "game",
    "web",
    "server",
    "pomelo-upgrade"
  ],
  "bin": {
    "pomelo": "./bin/pomelo"
  },
  "dependencies": {
    "async": "^3.x",
    "cliff": "^0.1.10",
    "commander": "^5.x",
    "crc": "^3.x",
    "mqtt": "^4.x",
    "node-bignumber": "^1.x",
    "node-schedule": "^1.x",
    "pomelo-admin-upgrade": "^3.x",
    "pomelo-loader-upgrade": "^0.0.2",
    "pomelo-logger-upgrade": "^2.x",
    "pomelo-protobuf": "^0.4.0",
    "pomelo-protocol": "^0.1.6",
    "pomelo-rpc-upgrade": "^3.x",
    "socket.io": "^2.x",
    "ws": "^7.x"
  },
  "devDependencies": {
    "blanket": "^1.2.3",
    "eslint": "^7.x",
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^2.x",
    "grunt-eslint": "^22.x",
    "grunt-mocha-test": "^0.13.3",
    "load-grunt-tasks": "^5.x",
    "mocha": "^7.x",
    "muk": "^0.5.3",
    "should": "^13.2.3",
    "socket.io-client": "^2.x"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "consistent-this": [
        "error",
        "_this"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "keyword-spacing": "error",
      "no-buffer-constructor": "warn",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "warn",
      "prefer-const": "warn",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
