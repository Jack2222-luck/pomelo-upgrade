{
  "name": "pomelo-upgrade",
  "version": "2.1.5",
  "description": "网易Pomelo升级版本",
  "private": false,
  "homepage": "https://github.com/frank198/pomelo-upgrade#readme",
  "scripts": {
    "test": "grunt"
  },
  "bugs": {
    "url": "https://github.com/frank198/pomelo-upgrade/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frank198/pomelo-upgrade.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/frank198/pomelo-upgrade#license"
    }
  ],
  "keywords": [
    "pomelo",
    "framework",
    "game",
    "web",
    "server",
    "pomelo-upgrade"
  ],
  "bin": {
    "pomelo": "./bin/pomelo"
  },
  "dependencies": {
    "async": "^2.x",
    "cliff": "^0.1.10",
    "commander": "^2.x",
    "crc": "^3.x",
    "mqtt": "^2.x",
    "node-bignumber": "^1.x",
    "pomelo-admin": "1.0.0",
    "pomelo-loader-upgrade": "^0.0.2",
    "pomelo-logger-upgrade": "^1.x",
    "pomelo-protobuf": "0.4.0",
    "pomelo-protocol": "0.1.6",
    "pomelo-rpc-upgrade": "^2.0.0",
    "pomelo-scheduler": "0.3.9",
    "socket.io": "^2.x",
    "ws": "^3.x"
  },
  "devDependencies": {
    "blanket": "~1.1.6",
    "eslint": "*",
    "grunt": "*",
    "grunt-contrib-clean": "*",
    "grunt-eslint": "^20.1.0",
    "grunt-mocha-test": "^0.13.3",
    "load-grunt-tasks": "^3.5.2",
    "mocha": "^3.5.3",
    "muk": ">=0.0.1",
    "should": "^13.1.2",
    "socket.io-client": "^2.0.3"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "consistent-this": [
        "error",
        "_this"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "keyword-spacing": "error",
      "no-buffer-constructor": "warn",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "warn",
      "prefer-const": "warn",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
